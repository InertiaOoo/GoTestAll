<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

   <Button
       android:id="@+id/bt_golocal"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="Go LocalMusic"
       android:textAllCaps="false"/>

    <Button
        android:id="@+id/bt_goonline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bt_golocal"
        android:text="Go OnlineMusic"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/bt_gosound"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bt_goonline"
        android:text="Go SoundContent"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/bt_goblue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bt_gosound"
        android:text="Go BlueTooth"
        android:textAllCaps="false"/>
</RelativeLayout>